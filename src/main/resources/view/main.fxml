<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.aion.gui.controller.main">
    <BorderPane>
        <center>
            <GridPane prefHeight="400.0" prefWidth="600.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <BorderPane GridPane.rowIndex="2">
                    <center>
                        <TextArea fx:id="solutions" prefHeight="200.0" prefWidth="200.0"/>
                    </center>
                    <top>
                        <Label text="Launch Code Solutions" BorderPane.alignment="CENTER">
                            <padding>
                                <Insets bottom="10.0" top="10.0"/>
                            </padding>
                        </Label>
                    </top>
                </BorderPane>
                <BorderPane>
                    <center>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <HBox alignment="CENTER">
                                    <children>
                                        <Label prefHeight="17.0" prefWidth="140.0" text="Letters"/>
                                        <TextField fx:id="cipherTextOne"/>
                                        <TextField fx:id="cipherTextTwo"/>
                                        <TextField fx:id="cipherTextThree"/>
                                        <TextField fx:id="cipherTextFour"/>
                                        <TextField fx:id="cipherTextFive"/>
                                        <TextField fx:id="cipherTextSix"/>
                                        <TextField fx:id="cipherTextSeven"/>
                                        <TextField fx:id="cipherTextEight"/>
                                    </children>
                                </HBox>
                                <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                                    <children>
                                        <Label prefHeight="17.0" prefWidth="140.0" text="Numbers"/>
                                        <TextField fx:id="cipherCodeOne"/>
                                        <TextField fx:id="cipherCodeTwo"/>
                                        <TextField fx:id="cipherCodeThree"/>
                                        <TextField fx:id="cipherCodeFour"/>
                                        <TextField fx:id="cipherCodeFive"/>
                                        <TextField fx:id="cipherCodeSix"/>
                                        <TextField fx:id="cipherCodeSeven"/>
                                        <TextField fx:id="cipherCodeEight"/>
                                    </children>
                                </HBox>
                            </children>
                        </GridPane>
                    </center>
                    <top>
                        <Label text="Silo Codes" BorderPane.alignment="CENTER"/>
                    </top>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </BorderPane>
                <BorderPane GridPane.rowIndex="1">
                    <center>
                        <HBox alignment="CENTER">
                            <children>
                                <TextField fx:id="pattern"/>
                            </children>
                        </HBox>
                    </center>
                    <top>
                        <Label text="Pattern" BorderPane.alignment="CENTER"/>
                    </top>
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </BorderPane>
            </GridPane>
        </center>
        <left>
            <AnchorPane prefHeight="400.0" prefWidth="120.0" BorderPane.alignment="CENTER">
                <Button fx:id="execute" alignment="CENTER" layoutX="37.0" layoutY="188.0" mnemonicParsing="false"
                        onAction="#execute" text="Crack"/>
            </AnchorPane>
        </left>
    </BorderPane>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0"/>
    </padding>
</AnchorPane>
